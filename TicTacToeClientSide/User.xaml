<Window x:Class="TicTacToeClientSide.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeClientSide"
        mc:Ignorable="d"
        Title="User" Height="550" Width="450" BorderThickness="4" BorderBrush="#FF600072">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7.2*" />
            <RowDefinition Height="1.6*" />
            <RowDefinition Height="1.6*" />
            <RowDefinition Height="1.5*" />
        </Grid.RowDefinitions>
        <Grid Name="Img_back" ></Grid>
        <DockPanel Grid.Row="1" >
            <Button  FontSize="25" FontFamily="Arial Rounded MT Bold" Background="#FF840CCC" Foreground="White" Click="Button_Click" >SELECT FILE</Button>
        </DockPanel>
        <StackPanel Grid.Row="2" >
            <Label VerticalAlignment="Top" >User Name</Label>
            <TextBox Name="Name_text_box" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center"></TextBox>
        </StackPanel>
        <Button Grid.Row="3" FontSize="25" FontFamily="Arial Rounded MT Bold" Background="#FF2C78F0" Foreground="White" Click="Button_Click_1" >ENTER</Button>
    </Grid>
</Window>
